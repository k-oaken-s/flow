{
  "name": "flow",
  "version": "1.0.0",
  "main": "./main.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist/styles",
    "build:css": "npx tailwindcss -i ./src/renderer/styles/global.css -o ./dist/styles/global.css --postcss",
    "build:app": "esbuild src/renderer/app.tsx --bundle --outfile=dist/app.js --platform=browser",
    "build": "npm run clean && npm run build:css && npm run build:app",
    "watch:css": "npx tailwindcss -i ./src/renderer/styles/global.css -o ./dist/styles/global.css --watch --postcss",
    "watch:app": "esbuild src/renderer/app.tsx --bundle --outfile=dist/app.js --platform=browser --watch",
    "dev": "npm run build && concurrently \"npm run watch:css\" \"npm run watch:app\" \"electron .\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-oaken-s/flow.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/k-oaken-s/flow/issues"
  },
  "homepage": "https://github.com/k-oaken-s/flow#readme",
  "description": "Video Management Application",
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3",
    "esbuild": "^0.24.2",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
