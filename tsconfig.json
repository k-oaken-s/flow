{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["dom", "dom.iterable", "esnext"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "outDir": "dist",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }